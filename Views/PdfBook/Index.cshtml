@model List<Bookinist.Models.Entity.PdfBook>

@{
    ViewData["Title"] = "Index";
}


<div class="d-flex justify-content-between mt-3 mb-3">
    <h5 style="color: rgb(94,187,241);">Электронные книги</h5>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary" asp-area="" asp-controller="PdfBook" asp-action="Create">Добавить</a>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <h4 class="text-white">Название</h4>
            </th>
            <th>
                <h4 class="text-white">Файл</h4>
            </th>

            <th>
                <h4 class="text-white">Описание</h4>
            </th>
            <th>
                <h4 class="text-white">Время добавления</h4>
            </th>
            <th>
                <h4 class="text-white">Владелец</h4>

            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr> 
                <td class="text-white">
                    @item.Name
                </td>
                <td>
                    <a class="btn btn-info" href="@Url.Content("~/PDF/"+item.CreatedAt.ToString()+".pdf")" target="_blank">@item.Name<span style="font-size:.8em;">.pdf</span></a>
                </td>
                <td class="text-white">
                    @item.Description
                </td>
                <td class="text-white">
                    @item.CreatedAt
                </td>
                <td class="text-white">
                    @item.UserName
                </td>
            </tr>
        }
    </tbody>
</table>