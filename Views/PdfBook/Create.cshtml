@model Bookinist.Models.Entity.PdfBook
<br />
<div class="card" style="background-color: rgb(52,58,64);">
    <div class="card-header">
        <div class="card-title" style="color:white">
            Добавить новую электронную книгу
        </div>
    </div>
    <div class="card-body">
        <form action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" style="color:white">Название: </label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" style="color:white">Описание: </label>
                <input asp-for="Description" class="form-control" />
            </div>

            <div class="form-group">
                <input type="file" name="file" class="text-white" asp-for="PathVal" asp-controller="PdfBook" />
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>
