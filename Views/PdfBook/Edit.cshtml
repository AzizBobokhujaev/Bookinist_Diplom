@model Bookinist.Models.Entity.PdfBook

<h5 class="text-white">Изменить pdf-книгу</h5>
<div class="good" style="border: 1px solid #fff; border-radius: 10px;">
    <div class="card-body">
        <form method="post" asp-action="Edit" asp-controller="PdfBook" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label text-white">Название: </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label text-white">Описание: </label>
                <textarea asp-for="Description" class="form-control" aria-label="With textarea"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label asp-for="Status" class="control-label text-white">Статус:</label>
                    <select class="form-control" asp-for="Status">
                        <option class="text-danger" value="false">Неактивный</option>
                        <option class="text-success" value="true">Активный</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success" />
                <a asp-action="Index" asp-controller="PdfBook" class="btn btn-primary">Назад</a>
            </div>
        </form>
    </div>
</div>

<style>
    .good {
        width: 800px
    }
</style>