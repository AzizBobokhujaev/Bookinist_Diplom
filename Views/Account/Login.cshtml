@model Bookinist.Models.DTO.LoginDTO
<br />
<br />
<div id="wrapper" class="wrap-login" style="text-align: -webkit-center;">
    <div class="card col-md-5" style="background-color:rgb(52,58,64)">
        <div class="card-body">
            <div class="card-content p-2">
                <div class="text-center">
                    <img src=""/>
                </div>
                <div class="card-title text-uppercase text-center py-3 text-white">Вход</div>
                <form asp-action="Login" asp-controller="Account" asp-antifor03
                      gery="true" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="sr-only text-white"></label>
                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        <div class="position-relative has-icon-right" >
                            <input type="text" asp-for="UserName" class="form-control input-shadow" autocomplete="username" placeholder="Введите логин" required/>                            
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="sr-only text-white"></label>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        <div class="position-relative has-icon-right">
                            <input required type="password" asp-for="Password" class="form-control input-shadow" autocomplete="current-password" placeholder="Введите пароль"/>                            
                        </div>
                    </div>
                    <button class="btn btn-warning btn-block" id="submit-btn">Вход</button> <span style="color:white">или</span> <a style="color:darkturquoise" asp-action="Register" asp-controller="Account">Регистрация</a>
                </form>
            </div>
        </div>
    </div>
</div>