@model List<Bookinist.Models.DTO.BookDTO>
<br />
<div class="d-flex justify-content-between mt-3 mb-3">
    <h5 class="" style="color:white">Мои книги</h5>
    <a class="btn btn-primary" asp-area="" asp-controller="Book" asp-action="Create">Добавить</a>
</div>
<br />
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>Автор</th>
            <th>Цена</th>
            <th>Краткое описане</th>
            <th>Категория</th>
            <th>Владелец</th>
            <th>Статус</th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Name</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.ShortDesc</td>
                <td>@book.CategoryName</td>
                <td>@book.UserName</td>
                @if (book.Status == true)
                {
                    <td class="text-success">Опубликован</td>
                }
                else
                {
                    <td class="text-warning">На рассмотрениии</td>
                }
                <td><a class="btn btn-info" href="~/Book/Edit?id=@book.Id">Изменить</a></td>
                <td><a class="btn btn-danger" href="~/Book/Delete?id=@book.Id">Удалить</a></td>

            </tr>
        }
    </tbody>
</table>