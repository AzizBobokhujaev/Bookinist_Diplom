@model Bookinist.Models.DTO.BookDTO
<br />
<div class="card city" style="background-color: rgb(52,58,64);" >
    <div class="card-header">
        <div class="card-title" style="color:white">
            Добавить новую книгу
        </div>
    </div>
    <div class="card-body">
        <form action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" style="color:white"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Author" style="color:white"></label>
                <input asp-for="Author" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price" style="color:white"></label>
                <input asp-for="Price" class="form-control" type="number" />
            </div>
            <div class="form-group">
                <label asp-for="ShortDesc" style="color:white"></label>
                <input asp-for="ShortDesc" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LongDesc" style="color:white"></label>
                <textarea asp-for="LongDesc" class="form-control" aria-label="With textarea"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" style="color:white"></label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="file" name="file" class="text-white" asp-for="Image" asp-controller="Book"/>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>
<style>
    .city{
        width:800px;
    }
</style>