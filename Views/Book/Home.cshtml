@model List<Bookinist.Models.DTO.BookDTO>
@{
    ViewData["Title"] = "Bookinist Home";
}

<div class="d-flex justify-content-between mt-3 mb-3">
    <h3 class="text-white">Книги</h3>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary" asp-area="" asp-controller="Book" asp-action="Create">Добавить</a>

    }
</div>
<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-3 col-xs-12 col-lg-4 mb-4">
            <div class="card bg-dark" style="height:453px; display:flex; align-items:center; justify-content:center; padding:10px; text-align:center;">
                <div class="card-body">
                    <img src="@Url.Content("~/Image/" +book.CreatedAt.ToString()+".jpg")" type="jpg/mpeg" id="@book.Id" style="width:180px; height:250px; align-items:center;" />
                    <h5 class="card-title text-info" style="text-align:center;">@book.Name</h5>
                    <h6 class="card-text text-white">Автор: @book.Author</h6>
                    <p class="card-text text-white">Цена: @book.Price TJS</p>
                    <a class="btn btn-info" href="~/Book/Details?id=@book.Id">Подробно</a>
                </div>
            </div>
        </div>
    }
</div>
